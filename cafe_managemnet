#defone the menu of restuarant
menu={
    'pizza':120,
     'cheese burger':200,
     'cheese sandwitch':140,
     'chicken burger':170,
     'fresh orange juice':110,
     'lemonade':100,
     'cappuccino':250,
     'lette':200,
     'mocha':300,
     'mango smoothie':110,
     'choclate chip cookies':80,
     'french fries':250,
     'cakes':300,
     'pastry':50,
     'cookies':150,
     'brownies':150


}
#greet the customers
print("Welcome to the cafe")
print("pizza:rs80\nspicy chicken:220\nmilkshakes:rs120")
order_total=0
item_1=input("Enter the name of the item you want to order=")
if item_1 in menu:
    order_total+=menu[item_1]
    print(f"your item {item_1} has been added to your order")
else:
    print(f"your item {item_1} is not available yet!")
another_order=input("Do you want to add another item?(Yes/No)")
if another_order=="Yes":
    item_2=input("Enter the name of second item=")
    if item_2 in menu:
        print(f"Item {item_2} has been added to the order")
        order_total+=menu[item_2]
    else:
        print(f"Ordered item {item_2} is not available!")
print(f"The total amount of items to pay is {order_total}")

